<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.easymove.UserBearbeiten"
    android:orientation="vertical"
    android:background="#ff000000"
    android:visibility="visible"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView android:text="Persönliche Daten" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mein Profil"
        android:id="@+id/Profil"
        android:layout_toStartOf="@+id/Vornamenn"
        android:layout_alignTop="@+id/Vornamenn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vorname"
        android:id="@+id/Vornamenn"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_marginLeft="136dp"
        android:layout_toEndOf="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginTop="117dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Umzüge"
        android:id="@+id/Umzüg"
        android:layout_toStartOf="@+id/Vornamenn"
        android:layout_alignTop="@+id/UserNamenn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipp"
        android:id="@+id/Tipp"
        android:layout_below="@+id/Umzüg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="71dp"
        android:layout_alignRight="@+id/Umzüg"
        android:layout_alignEnd="@+id/Umzüg"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/Homebutton"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toStartOf="@+id/Vornamenn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="97dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nachname"
        android:id="@+id/NachNamenn"
        android:textColor="@android:color/white"
        android:layout_below="@+id/Profil"
        android:layout_alignLeft="@+id/Vornamenn"
        android:layout_alignStart="@+id/Vornamenn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Benutzername"
        android:id="@+id/UserNamenn"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_below="@+id/NachNamenn"
        android:layout_alignLeft="@+id/NachNamenn"
        android:layout_alignStart="@+id/NachNamenn"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PLZ"
        android:id="@+id/PLZN"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_toStartOf="@+id/E_Mailn"
        android:layout_toEndOf="@+id/Vornamenn"
        android:layout_below="@+id/Umzüg"
        android:layout_alignLeft="@+id/E_Mailn"
        android:layout_alignStart="@+id/E_Mailn"
        android:layout_alignRight="@+id/Vornamenn"
        android:layout_alignEnd="@+id/Vornamenn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Straße"
        android:id="@+id/Strassen"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_above="@+id/Homebutton"
        android:layout_alignLeft="@+id/UserNamenn"
        android:layout_alignStart="@+id/UserNamenn"
        android:layout_marginBottom="97dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-Mail"
        android:id="@+id/E_Mailn"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:layout_below="@+id/Tipp"
        android:layout_alignStart="@+id/Strassen" />

    <ListView
        android:layout_width="434dp"
        android:layout_height="291dp"
        android:id="@android:id/list"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/Strassen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="1100dp"
        android:layout_alignParentStart="false"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persönliche Daten ändern"
        android:id="@+id/EPdat"
        android:layout_alignTop="@+id/Homebutton"
        android:layout_alignStart="@+id/E_Mailn"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/SPdat"
        android:layout_below="@+id/Strassen"
        android:layout_toEndOf="@+id/EPdat"
        android:layout_marginStart="140dp"
        android:singleLine="false"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextVorname"
        android:hint="Vorname"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:layout_alignTop="@+id/Vornamenn"
        android:layout_alignStart="@+id/editTextPLZ" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNachname"
        android:hint="Nachname"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:layout_alignTop="@+id/NachNamenn"
        android:layout_alignStart="@+id/editTextUsername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/editTextUsername"
        android:hint="Username"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:layout_alignTop="@+id/UserNamenn"
        android:layout_alignEnd="@+id/editTextPLZ" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPLZ"
        android:hint="PLZ"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:layout_alignTop="@+id/PLZN"
        android:layout_alignStart="@+id/editTextStrasse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextStrasse"
        android:hint="Stasse"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:layout_alignTop="@+id/Strassen"
        android:layout_alignStart="@+id/editTextEmail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmail"
        android:hint="EMail                                                                 "
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:layout_alignTop="@+id/E_Mailn"
        android:layout_toEndOf="@+id/EPdat" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Profilbild"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@android:id/list"
        android:layout_toEndOf="@+id/editTextEmail"
        android:layout_above="@+id/SPdat" />

</RelativeLayout>
